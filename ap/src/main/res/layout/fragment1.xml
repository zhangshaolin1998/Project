<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <com.bawei.app.fragment1View.MyScrollView
       android:id="@+id/scr"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="510dp"
           android:background="#f5f5f5"
           >
          <com.youth.banner.Banner
              android:id="@+id/ban"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:layout_alignParentStart="true"
              android:layout_alignParentLeft="true"
              app:image_scale_type="fit_xy"
              ></com.youth.banner.Banner>
          <ImageView
              android:id="@+id/ac_im"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:src="@drawable/gg"
              android:layout_below="@+id/ban"
              android:scaleType="fitXY"
              />
           <RelativeLayout
               android:id="@+id/rl_02"
               android:layout_width="match_parent"
               android:layout_height="120dp"
               android:layout_below="@+id/ac_im">
               <android.support.v4.view.ViewPager
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:id="@+id/vp"
                   android:layout_alignParentStart="true"
                   android:paddingLeft="20dp"
                   android:paddingRight="20dp"
                   ></android.support.v4.view.ViewPager>

               <ImageView
                   android:id="@+id/im_you"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_alignParentBottom="true"
                   android:layout_alignParentRight="true"
                   android:layout_marginBottom="80dp"
                   android:layout_marginRight="5dp"
                   android:src="@drawable/you" />
               <ImageView
                   android:id="@+id/im_zuo"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_alignParentBottom="true"
                   android:layout_alignParentLeft="true"
                   android:layout_marginBottom="80dp"
                   android:layout_marginLeft="5dp"
                   android:src="@drawable/zuo"
                   android:visibility="gone" />

           </RelativeLayout>

           <LinearLayout
               android:id="@+id/rr"
               android:layout_width="400dp"
               android:layout_height="40dp"
               android:layout_below="@+id/rl_02"
               android:layout_centerHorizontal="true"
               android:background="@drawable/beijing"
               android:orientation="horizontal"
               android:padding="8dp">

               <TextView
                   android:layout_width="8dp"
                   android:layout_height="wrap_content" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="京东 "
                   android:textColor="#000"
                   android:textSize="20sp"

                   />

               <ImageView
                   android:layout_width="40dp"
                   android:layout_height="25dp"
                   android:background="@drawable/kuaibao" />


               <ViewFlipper
                   android:id="@+id/vfp"
                   android:layout_width="220dp"
                   android:layout_height="wrap_content"

                   ></ViewFlipper>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=" | 更多 "
                   android:textColor="#000"
                   android:textSize="15sp" />
           </LinearLayout>

           <ImageView
               android:id="@+id/guanggao"
               android:layout_width="match_parent"
               android:layout_height="210dp"
               android:layout_below="@+id/rr"
               android:paddingTop="10dp"
               android:scaleType="fitXY"
               android:src="@drawable/guangg" />

           <android.support.v7.widget.RecyclerView
               android:id="@+id/recy_my"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_below="@+id/guanggao"
               android:paddingTop="10dp"></android.support.v7.widget.RecyclerView>

       </RelativeLayout>
   </com.bawei.app.fragment1View.MyScrollView>

    <RelativeLayout
        android:id="@+id/H_rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#00000000"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:fitsSystemWindows="false">

        <ImageView
            android:id="@+id/saom"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/a_o" />

        <TextView
            android:id="@+id/saot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/saom"
            android:layout_below="@+id/saom"
            android:layout_marginTop="5dp"
            android:text="扫一扫"
            android:textColor="@color/colorTextF" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/saom"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/saot"
            android:src="@drawable/sousuo" />

        <ImageView
            android:id="@+id/jiqi"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/imageView"
            android:layout_centerVertical="true"
            android:src="@drawable/as1" />

        <ImageView
            android:id="@+id/sousuo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/imageView"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/a_1" />

        <ImageView
            android:id="@+id/xiaoxi"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginRight="15dp"
            android:src="@drawable/a9t" />


        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/xiaoxi"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:text="消息"
            android:textColor="@color/colorTextF" />
    </RelativeLayout>

    <com.hjm.bottomtabbar.BottomTabBar
        android:id="@+id/btb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></com.hjm.bottomtabbar.BottomTabBar>

</RelativeLayout>
